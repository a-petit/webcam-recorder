{
  "customSetting" : "defaultCustomSetting",
  "window" : {
    "width": 1920,
    "height": 1080,
    "kiosk": true,
    "autoHideMenuBar": true,
    "webPreferences": {
      "plugins": true,
      "directWrite": true,
      "webSecurity": false,
      "experimentalFeatures": false,
      "experimentalCanvasFeatures": false,
      "allowRunningInsecureContent": true,
      "allowDisplayingInsecureContent": true
    }
  },
  "appendSwitch": {
    "--disable-pinch": "",
    "--disable-touch-adjustment": "",
    "--touch-events": ""
  },
  "appendArgument": [
    "--overscroll-history-navigation=0",
    "--ignore-gpu-blacklist"
  ],
  "serviceWorker": {
    "enable": false,
    "cacheFirst": false
  },
  "autotest": {
    "duration": 5000,
    "wait": 2000
  },
  "camera": {
    "resolutions": [
      {"name": "QVGA",  "value": {"width": {"exact": 320},  "height": {"exact": 240}}},
      {"name": "VGA",   "value": {"width": {"exact": 640},  "height": {"exact": 480}}},
      {"name": "720p",  "value": {"width": {"exact": 1280}, "height": {"exact": 720}}},
      {"name": "1080p", "value": {"width": {"exact": 1920}, "height": {"exact": 1080}}},
      {"name": "4K",    "value": {"width": {"exact": 4096}, "height": {"exact": 2160}}}
    ],
    "mirror": true,
    "areaOfInterest": {
      "width": 1071,
      "height": 625
    },
    "output": {
      "background": "#000000",
      "width": 1920,
      "height": 1080
    }
  }
}
